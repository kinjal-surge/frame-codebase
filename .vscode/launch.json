{
    // Launch requires the Cortex-Debug plugin for VSCode:
    // https://marketplace.visualstudio.com/items?itemName=marus25.cortex-debug
    "configurations": [
        {
            "cwd": "${workspaceFolder}",
            "executable": "build/application_core.elf",
            "name": "Application Core L-Link",
            "request": "launch",
            "type": "cortex-debug",
            "device": "nRF5340_XXAA_application",
            "showDevDebugOutput": "none",
            "servertype": "jlink",
            "svdFile": "nrfx/mdk/nrf5340_application.svd",
            "preLaunchTask": "Pre-launch Delay",
            "presentation": {
                "hidden": true,
                "group": "",
                "order": 1
            },
            "internalConsoleOptions": "neverOpen",
            "armToolchainPath": "~/arm-gnu-toolchain-12.3.rel1-x86_64-arm-none-eabi/bin"
        },
        {
            "cwd": "${workspaceFolder}",
            "executable": "build/network_core.elf",
            "name": "Network Core L-Link",
            "request": "launch",
            "type": "cortex-debug",
            "device": "nRF5340_XXAA_network",
            "showDevDebugOutput": "none",
            "servertype": "jlink",
            "svdFile": "nrfx/mdk/nrf5340_network.svd",
            "presentation": {
                "hidden": true,
                "group": "",
                "order": 1
            },
            "internalConsoleOptions": "neverOpen",
            "armToolchainPath": "~/arm-gnu-toolchain-12.3.rel1-x86_64-arm-none-eabi/bin"
        }
    ],
    "compounds": [
        {
            "name": "J-Link",
            "configurations": [
                "Application Core L-Link",
                "Network Core L-Link"
            ],
            "preLaunchTask": "Build Firmware",
            "stopAll": true
        }
    ]
}